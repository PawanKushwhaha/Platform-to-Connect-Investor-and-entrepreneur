<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F1"

    tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"

        android:visibility="visible"
        android:id="@+id/progress_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/heading"
        android:paddingTop="@dimen/_9sdp"
        android:orientation="horizontal">

<!--            <TextView-->
<!--                android:paddingStart="@dimen/_5sdp"-->

<!--                android:layout_weight="1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="CAPTAL"-->
<!--                android:textSize="@dimen/_25sdp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textStyle="italic"-->
<!--                />-->

        <ImageView

            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/home_page_profile_user"
            android:src="@drawable/profile"
            android:layout_marginStart="@dimen/_10sdp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:paddingStart="@dimen/_3sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:hint="Search..."
            android:textAlignment="center"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"/>

        <ImageView
            android:layout_marginEnd="@dimen/_15sdp"

            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"

            android:id="@+id/chat_button"

            android:layout_marginBottom="@dimen/_6sdp"
            android:src="@drawable/chatings"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
android:layout_below="@id/heading"
        android:id="@+id/heading_view"

        android:background="@android:color/darker_gray"
        />

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recycler_view_homepage"
    android:layout_below="@id/heading_view"
    android:layout_above="@id/bottom_view"/>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_above="@id/bottom"
        android:id="@+id/bottom_view"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/bottom"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_24sdp"
            android:id="@+id/home_page_btn"
            android:src="@drawable/home"
/>


        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:id="@+id/home_page_photo_upload"
            android:src="@drawable/add_photo"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/network"
            android:src="@drawable/img5"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/premium"
            android:src="@drawable/premium68"
            />




    </LinearLayout>



</RelativeLayout>