<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk"
    tools:context=".founder_edit_page">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="@dimen/_25sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/founder_profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose Your Image"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                />



            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_15sdp"


                android:text="YOUR INFO *"/>


            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint=" First Name* "
                android:id="@+id/founder_firstname"
                android:textSize="@dimen/_19sdp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name *"
                android:id="@+id/founder_lastname"

                android:layout_marginBottom="@dimen/_10sdp"

                android:textSize="@dimen/_19sdp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About*"
                android:layout_marginBottom="@dimen/_20sdp"
                android:id="@+id/founder_about"

                android:textSize="@dimen/_19sdp"
                />

            <TextView
                android:layout_marginBottom="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"


                android:text="Top Project*"/>
            <EditText
                android:layout_width="match_parent"
                android:textSize="@dimen/_19sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/company_name"

                android:hint="Project Name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_19sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                android:id="@+id/company_details"

                android:hint="Project Details"/>

            <TextView
                android:layout_marginBottom="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"

                android:text="CONTACT INFO *"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Info"
                android:layout_marginBottom="@dimen/_10sdp"

                android:id="@+id/founder_contact"
                android:textSize="@dimen/_19sdp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Links"
                android:layout_marginBottom="@dimen/_20sdp"

                android:id="@+id/founder_website_link"
                android:textSize="@dimen/_19sdp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/founder_save"
                android:background="@android:color/holo_blue_dark"/>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>